{
    "name": "nodetube",
    "id": "nodetube",
    "packaging_format": 1,
    "description": {
        "en": "nodetube package for YunoHost.",
        "fr": "nodetube pour YunoHost."
    },
    "version": "2.0",
    "url": "https://github.com/mayeaux/nodetube",
    "license": " licencia MIT ",
    "maintainer": {
        "name": "discapacidad5",
        "email": "discapacidad5@gmail.com"
    },
    "requirements": {
        "yunohost": ">= 2.7.2"
    },
    "multi_instance": false,
    "services": [
        "Node.js 8.0+",
        "MongoDB",
        "ffmpeg",
        "Redis"
    ],
    "arguments": {
        "install": [{
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain name for nodetube",
                    "fr": "Choisissez un nom de domaine pour nodetube"
                },
                "example": "example.com"
            },

            {
                "name": "path",
                "type": "path",
                "ask": {
                    "en": "Choose a path for nodetube /nodetube is accepted",
                     "fr": "Choisissez un chemin pour nodetube /nodetube est accept√©"
                },
                "example": "/nodetube",
                "default": "/nodetube"
            },
            
            {
                "name": "is_public",
                "type": "boolean",
                "ask": {
                    "en": "Is it a public site ?",
                    "fr": "Est-ce un site public ?"
                },
                "default": "true"
            }
        ]
    }
}
